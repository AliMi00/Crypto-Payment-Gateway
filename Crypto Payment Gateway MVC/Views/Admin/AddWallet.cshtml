@model Crypto_Payment_Gateway_MVC.Models.ViewModels.AddWalletViewModel

@{
    ViewData["Title"] = "View";
}

<h1>View</h1>

<h4>AddWalletViewModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddWallet">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="WalletAddress" class="control-label"></label>
                <input asp-for="WalletAddress" class="form-control" />
                <span asp-validation-for="WalletAddress" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Currency" class="control-label"></label>
                <select asp-for="Currency" class="form-control"></select>
                <span asp-validation-for="Currency" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PrivateKey" class="control-label"></label>
                <input asp-for="PrivateKey" class="form-control" />
                <span asp-validation-for="PrivateKey" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UsedCounter" class="control-label"></label>
                <input asp-for="UsedCounter" class="form-control" />
                <span asp-validation-for="UsedCounter" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsMainWallet" /> @Html.DisplayNameFor(model => model.IsMainWallet)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsAvailable" /> @Html.DisplayNameFor(model => model.IsAvailable)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

